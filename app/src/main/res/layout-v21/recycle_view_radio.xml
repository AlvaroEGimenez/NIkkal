<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="6dp"
    android:elevation="5dp"
    android:orientation="horizontal">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radioCoordinator">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="1dp"
        android:background="@color/album_background">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tvNombreradio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nombre Radio"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/album_titulo"/>

            <TextView
                android:id="@+id/tvSintonia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sintonia"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/album_titulo"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <ImageButton
            android:id="@+id/ivStop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@color/album_background"/>
    </LinearLayout>


    </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>