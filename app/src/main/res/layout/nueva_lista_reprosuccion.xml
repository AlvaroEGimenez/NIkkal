<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNombreListaRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nombre_lista_reproduccion">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNombreNuevaListaRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAceptarNuevaListaRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_aceptar" />

        <Button
            android:id="@+id/btnCancelarNuevaListaRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelar" />

    </LinearLayout>

</LinearLayout>