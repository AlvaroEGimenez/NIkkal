<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:background="@android:color/black"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilNombreListaRep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="@string/hint_nombre_lista_reproduccion">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNombreNuevaListaRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:singleLine="true"
            />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnAceptarNuevaListaRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_aceptar"
            android:background="@color/colorAccent"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/btnCancelarNuevaListaRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelar"
            android:background="@color/colorAccent"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</LinearLayout>