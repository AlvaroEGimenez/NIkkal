<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/bar_bottom_background"
    android:clickable="true"
    android:elevation="10dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/linealForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bar_bottom_background"
        android:orientation="horizontal">

        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/imgAlbumListaReproduccion"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fondo_pista" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvNombreAlbumTemaPistaListaReprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Nombre Tema"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/album_titulo" />

            <TextView
                android:id="@+id/tvNombreArtistaTemaPistaListaReprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Nombre Album"
                android:textColor="@color/album_titulo" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>