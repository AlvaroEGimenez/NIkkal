<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivItemFavorito"
            tools:src="@drawable/ic_album_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            />

        <TextView
            android:id="@+id/tvTituloItemFavorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/tv_almbum_favoritos"
            android:layout_alignTop="@id/ivItemFavorito"
            android:layout_toEndOf="@id/ivItemFavorito"
            android:textSize="18sp"
            android:textColor="@color/album_titulo"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>

        <TextView
            android:id="@+id/tvSubTituloItemFavorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/tv_almbum_favoritos"
            android:layout_alignBottom="@id/ivItemFavorito"
            android:layout_toEndOf="@id/ivItemFavorito"
            android:textSize="15sp"
            android:textColor="@color/album_titulo"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>


    </RelativeLayout>



</RelativeLayout>