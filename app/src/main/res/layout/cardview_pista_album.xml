<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:background="@color/bar_bottom_background"
    android:layout_margin="5dp"
    android:alpha="0.86"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/bar_bottom_background"
        android:padding="10dp"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreAlbumTemaPista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Tema"
            android:textColor="@color/album_titulo"
            />

        <TextView
            android:id="@+id/tvNombreArtistaTemaPista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Album"
            android:textColor="@color/album_titulo"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/favoritoPista"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_margin="5dp"
        android:src="@drawable/ic_play"
        />

    <ImageView
        android:id="@+id/agregarPistaPlayList"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:layout_margin="5dp"
    android:src="@drawable/ic_agregar_play_list"
    />

    <ImageView
        android:id="@+id/compartirPista"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_margin="7dp"
        android:src="@drawable/ic_compartir"
        />

    </LinearLayout>
</android.support.v7.widget.CardView>