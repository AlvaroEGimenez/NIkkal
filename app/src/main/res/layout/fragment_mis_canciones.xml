<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menuNavegacion.Favoritos.MisAlbumsFragment"
    android:background="@drawable/background_bg">



    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tituloMisCanciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/tv_canciones_favoritas"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="5dp"

        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerMisCanciones"
        android:layout_below="@id/tituloMisCanciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>