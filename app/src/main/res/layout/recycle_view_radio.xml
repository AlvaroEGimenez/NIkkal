<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="6dp"
    android:elevation="5dp"
    android:orientation="horizontal">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/radioCoordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/album_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNombreradio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre Radio"
                    android:textAlignment="center"
                    android:textColor="@color/album_titulo"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvSintonia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sintonia"
                    android:textAlignment="center"
                    android:textColor="@color/album_titulo"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <ImageButton
                    android:id="@+id/ivStop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@color/album_background" />
            </LinearLayout>


        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>