<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/card_imagen_wigth"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/card_view_album_margin"
        android:layout_marginRight="@dimen/card_view_album_margin"
        card_view:cardCornerRadius="@dimen/card_album_radio"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/album_background">

            <ImageView
                android:id="@+id/imagenAlbum"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_imagen_height"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagenAlbum"
                android:theme="@style/nombreAlbum"/>
                />


            <ImageView
                android:id="@+id/itemMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagenAlbum"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

