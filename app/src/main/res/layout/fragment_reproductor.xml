<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ReproductorFragment">

    <ImageView
        android:id="@+id/blurimageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvNombretrackReproductor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/album_titulo"
        android:layout_marginTop="10dp"
        android:layout_below="@id/blurimageview"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="00000000000000000000"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/tvNombreArtistaReproductor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/album_titulo"
        android:layout_below="@id/tvNombretrackReproductor"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="00000000000000000000"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:singleLine="true"
        />

</RelativeLayout>